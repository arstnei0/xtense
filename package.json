{
	"name": "xtense",
	"version": "0.0.2",
	"scripts": {
		"dev": "vite",
		"lint": "eslint . --ext .ts",
		"format": "prettier . --write",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"build": "npm run build:types && npm run build:js",
		"build:js": "vite build",
		"build:types": "tsc -m amd -t ESNext -d --isolatedModules false  --moduleResolution node --esModuleInterop --jsx react --outFile dist/index.js src/index.ts && rm -rf dist/index.js"
	},
	"devDependencies": {
		"@types/node": "^18.8.3",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.24.0",
		"vite": "^3.1.4",
		"prettier": "^2.7.1",
		"vitest": "^0.23.4"
	},
	"dependencies": {
		"typescript": "^4.6.4"
	},
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js"
		}
	}
}
